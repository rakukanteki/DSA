#include<bits/stdc++.h>
using namespace std;

//CREATING NODE
struct node
{
    int data;
    struct node *link;
};

int main()
{
    struct node *head = NULL;
    //head is the pointer to the first node. 
    //CREATING POINTER IS NOT ENOUGH WE HAVE TO ALLOCATE 
    //MEMORY FOR IT. THAT'S WHY WE USE malloc() function
    head = (struct node*)malloc(sizeof(struct node));
    //ADDRESS IS STORED INTO head pointer  
    
    //assigning values and memory
    head->data = 45;
    head ->link = NULL;
    
    //printing
    cout<<(head->data);

    return 0;
}
